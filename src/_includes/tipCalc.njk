<!-- Tip Calculator -->
<div id ="container">
  <div id="calculator">
    <form>
      <p>How much did the meal cost?
        <p>
          £ <input id="billTotal" type="text" placeholder="Bill Amount">
          <p>What is my desired level of tipping?<p>
            <select id="tipPercentage">
                <option disabled selected value="0">Select how you value your tip</option>
                <option value="0.2">20&#37; I'm not from Yorkshire and I feel Generous</option>
                <option value="0.15">15&#37; What an awesome meal!!!</option>
                <option value="0.05">5&#37; Great meal, I'd come back, but I'm cheap</option>
                <option value="0.01">1&#37; Service was that bad I'm going to make it obvious I don't like them</option>
            </select>
    </form>
        <button type="button" id="calculate">Calculate the Tip!</button>
  </div>

    <div id="totalTip">
        <li>The total tip will be £<span id="tip">0.00</span></li>
    </div>
</div>
<script>
    
function calculateTip() {
let billTotal = document.getElementById("billTotal").value;
let tipPercentage = document.getElementById("tipPercentage").value;
let total = (billTotal * tipPercentage);

if (tipPercentage == 0) {
  alert("Please enter a Tip Percentage value");
  return;
}
if (billTotal === "") {
  alert("Please enter a Bill value");
  return;
}

    total = total.toFixed(2); // this limits the code to 2 decimals - do i need to add a rounding element or does it do that automatically

    document.getElementById("totalTip").style.display = "block"; // this is to show the tip at the end

    document.getElementById("tip").innerHTML = total;  // this is to change the tip number
    
}

// Hide the £0.00 figure on page load until submit
document.getElementById("totalTip").style.display = "none";

//click to call function - could i put calc tip into this function to streamline?
document.getElementById("calculate").onclick = function() {
    calculateTip();
  };

</script>