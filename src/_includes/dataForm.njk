<!-- Wrapper container -->
<div class="container border border-success rounded w-50"><h2>Please get in touch!</h2>

  <!-- Bootstrap 5 starter form -->
  <form name="contactme" method="POST" data-netlify="true">

    <!-- Name input -->
    <div class="form-group">
      <label for="name"> Name:</label>
      <input class="form-control" id="name" type="text" placeholder="Name" name="name">
    </div>

    <!-- Email address input -->
    <div class="form-group">
      <label for="emailAddress">Email Address:</label>
      <input class="form-control" id="emailAddress" type="email" placeholder="Email Address" name="Email">
    </div>

    <!-- Subject Info -->
    <div class="form-group">
      <label for="subject">Subject:</label>
      <input type="text" class="form-control" id="subject" placeholder="Subject" name="subject">
    </div>

    <!-- Message input -->
    <div class="form-group">
      <label for="message">Message:</label>
      <textarea type="text" class="form-control" id="message"  placeholder="Message" style="height: 10rem;" name="message" required></textarea>
    </div>

<!-- Check Box -->
    <div class="form-checkbox text-center">
      <input class="form-check-input" type="checkbox" id="check1" name="contactmecheckbox" checked required>
      <label class="form-check-label">Tick to agree to be contacted</label>
    </div>

<!-- Form submit button -->
    <div class="d-flex justify-content-center ">
      <button class="btn btn-success btn-lg" type="submit">Submit</button>
    </div>

  </form>

</div>

